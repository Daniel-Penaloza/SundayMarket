<div class="row">
  <div class="col-xs-12">
    <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>  
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "name", autofocus: true %>
      </div>    
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :price %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :price, step: 0.01, class: "form-control", rows: 6, placeholder: "Price"%>
      </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :summary %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :summary, class: "form-control", placeholder: "Product's summary", autofocus: true %>
        </div>    
      </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
        <div class="col-sm-8">
          <%= f.text_field :description, multiple: true, class: "form-control", rows: 6, placeholder: "Description"%>
        </div>
    </div>    
    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class='col-md-offset-1 col-md-11'>
        <%= f.submit class: 'btn pull-right' %> 
      </div>        
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to 'Cancel', root_path, class:"btn" %>
    </div>
  </div>
</div>