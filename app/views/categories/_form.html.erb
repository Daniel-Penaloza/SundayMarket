    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      
    <center>
        <div class="control-label col-md-2">
          <%= f.label :name, "Category Name" %>
        </div>
        <div class="col-md-8"><br/>
          <%= f.text_field :name, class: "form-control", placeholder: "Name of category",  autofocus: true %>
        </div>
      </div>
      <br> <br>
      
  <div class="form-group ">
			<%= f.label :cat_image, "Current Image" %> <br/><br/>
			<%= image_tag(@category.cat_image) %>
  </div>
 
      
        
 <div class="cat_image-upload"><br/><br/>
	<%= f.file_field :cat_image, id: "file-input"%>
 </div>
 
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10"><br/><br/>
      <%= f.submit(@category.new_record? ? "Add Category" : "Update Category", class: "cat-btn-file center") %>
    </div>
  </div>
    <% end %>
    
    <div class="col-md-4 col-md-offset-4 colormatch"><br/><br/>
      [ <%= link_to "Cancel request and return to Categories",  categories_path %> ]
    </div>
  </div>
</div>
</center>  