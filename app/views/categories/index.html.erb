<section class="index-categories">
  <h1>Explore By Category</h1>
  <% @categories.each do |category| %>
    <div class="row">
      <div class="col span-1-of-3">
        <div class="user-info-category">
          <%= image_tag(category.cat_image, size: "100x200", class: "category-image-index")%>
          <br>
          <span class="full-name-category-index"><%= link_to category.name, category_path(category) %></span><br>
          <span class="category-products"><%= pluralize(category.products.count, "product")%> in this category.</span><br><br>
          <% if signed_in? && User.admin_types.include?(current_user.type) %>
            <%= link_to "Edit Category", edit_category_path(category), class: "btn-actions-category" %>
            <%= link_to "Delete Category", category_path(category), method: :delete, data: { confirm: "Are You Sure?"}, class: "btn-actions-category" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</section>
<%= will_paginate @categories %>