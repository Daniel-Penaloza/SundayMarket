<section class = "registration-section">
	<h1>Edit User Profile</h1>
  <div class="registration-form-container">
    <%= form_for @user do |user| %>
      <div class="row">
        <%= image_tag(@user.image, size: "200x200", class: "show-image-user") %>
        <br> <br>
        <div class="image-upload">
          <label for="file-input">
            <span class="btn-select-user-image">Select A New File</span>
          </label>
          <%= user.file_field :image, id: "file-input" %>
        </div>
      </div>
      <br><br>
      <div class="row">
        <div class="col span-1-of-3">
          <div class="form-group">
            <%= user.label :first_name, class: "input-label" %>
            <%= user.text_field :first_name, class: "input-field"%>
          </div>

          <div class="form-group">
            <%= user.label :last_name, "Last Name", class: "input-label" %>
            <%= user.text_field :last_name, class: "input-field" %> 
          </div>

          <div class="form-group">
            <%= user.label :email, "Email", class: "input-label" %>
            <%= user.text_field :email, class: "input-field" %>
          </div>

          <div class="form-group">
            <%= user.label :password, class: "input-label" %> 
              <em>(6 characters minimum)</em><br />
              <%= user.password_field :password, autocomplete: "off", class: "input-field" %>
          </div>

          <div class="form-group">
            <%= user.label :password_confirmation, class: "input-label" %>
            <%= user.password_field :password_confirmation, autocomplete: "off", class: "input-field" %>
          </div>
        </div>

        <div class="col span-2-of-3">
          <div class="form-group">
            <%= user.label :shop_name, "Shop Name", class: "input-label" %>
            <%= user.text_field :shop_name, class: "input-field" %>
          </div>

          <div class="form-group">
            <%= user.label :website, "Website",  class: "input-label" %>
            <%= user.text_field :website, class: "input-field" %>
          </div>

          <div class="form-group">
            <%= user.label :shop_description, "Description", class: "input-label" %>
            <%= user.text_area :shop_description, class: "input-field", size: "20x4" %>
          </div>

          <div class="form-group">
            <%= user.submit "Edit User", class: "btn-submit" %>
          </div>          
        </div>
      </div>
    <% end %> 
  </div>
</section>


		