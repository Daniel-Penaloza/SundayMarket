<section class="section-login">
  <div class="row">
    <div class="col span-2-of-3">
      <h1>Log in</h1>
      <div class="login-form-container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="form-group">
          <%= f.label :email, class: "input-label" %><br />
          <%= f.email_field :email, autofocus: true, class: "input-field" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "input-label" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "input-field" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Log in", class: "btn-submit" %>
        </div>
      <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>