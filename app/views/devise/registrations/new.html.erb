<section class="registration-section">
    <div class="row">
    <div class="col span-2-of-3">
      <h1>Sign up</h1>    
      <div class="registration-form-container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
    
        <div class="col span-3-of-3">
          <div class="form-group">
            <%= f.label :first_name, class: "input-label" %>
            <%= f.text_field :first_name, autofocus: true, class: "input-field" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: "input-label" %>
            <%= f.text_field :last_name, autofocus: true, class: "input-field" %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "input-label" %>
            <%= f.email_field :email, autofocus: true, class: "input-field" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "input-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "input-field" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "input-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-field" %>
          </div>

            <div class="form-group">
                <%= f.submit "Sign up", class: "btn-submit" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</section>